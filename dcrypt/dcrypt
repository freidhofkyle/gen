#!/usr/bin/env python3 

from Crypto.PublicKey import RSA
from Crypto.Cipher import PKCS1_OAEP

# Load the private key from a file
with open('private_key.pem', 'rb') as f:
    private_key = RSA.import_key(f.read())

# Load the encrypted message from a file
with open('encrypted_message.hex', 'r') as f:
    hex_encrypted_message = f.read().strip()

# Convert the hex-encoded message back to bytes and decrypt it
encrypted_message = bytes.fromhex(hex_encrypted_message)
cipher = PKCS1_OAEP.new(private_key)
decrypted_message = cipher.decrypt(encrypted_message)

print(decrypted_message.decode())